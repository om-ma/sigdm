 <div class="right_col" role="main" style="min-height: 1063px;">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3></h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>
    </div>


    <div class="col-md-12 ">
      <p id="notice"><%= notice %></p>
      <div class="x_panel">
        <div class="x_title">
          <h2>Appointment</h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Settings 1</a>
                </li>
                <li><a href="#">Settings 2</a>
                </li>
              </ul>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">

          <table class="table">
            <thead>
              <tr>
                <th>Doctor</th>
                <th>Date</th>
                <th>Reason</th>
                <th>Diagnostics</th>
                <th>Next Date</th>
                <th>Prescription</th>
                <th>Comments</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @appointment.doctor.first_name %></td>
                <td><%= @appointment.da %></td>
                <td><%= @appointment.reason %></td>
                <td><%= @appointment.diagnostics %></td>
                <td><%= @appointment.da %></td>
                <td><%= @appointment.prescription %></td>
                <td><%= @appointment.comments  %></td>
                <td><%= link_to 'Add Appointment File', new_appointment_file_path(:appointment_id => @appointment.id),class: "btn btn-primary btn-xs"  %></td>
              </tr>
            </tbody>
          </table>

        </div>
        <%= link_to 'Edit', edit_appointment_path(@appointment), class: "btn btn-primary btn-xs" %> |
        <%= link_to 'Back', appointments_path,class: "btn btn-info btn-xs" %> 
      </div>
      
      
    </div>
    <br>
    <br>
    <br>
    <div class="col-md-12 ">
      <div class="x_panel">
        <div class="x_title">
          <h2>Appointment Files </h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Settings 1</a>
                </li>
                <li><a href="#">Settings 2</a>
                </li>
              </ul>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <ul class="list-unstyled msg_list">
            <% @appointment.appointment_files.each do |appointment_file| %>
              <%= render partial: "/appointment_files/single_appointmentfile", locals: {appointment_file: appointment_file} %>
            <% end %>
          </ul>

        </div>
        <div class="clearfix"></div>
        
      </div>
    </div>

</div>


