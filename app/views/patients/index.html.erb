


 <div class="right_col" role="main" style="min-height: 1063px;">
  <div class="">
    <div class="page-title">
      <div class="col-md-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Patients  Listing</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>

            </ul>
            <div class="clearfix"></div>
          </div>

          <div class="x_title">

            <%= search_form_for @query, url: patients_path,class: "form-horizontal form-label-left"  do |f| %>
              <div class="col-md-12">
                <div class="col-md-3">
                  <div class="form-group">
                    <div >

                      <%= f.search_field :first_name_cont, class: "form-control col-md-7 col-xs-12", placeholder: "First Name" %>
                      <!-- <input type="text" id="first-name" required="required" class="form-control col-md-7 col-xs-12"> -->
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <div >
                      <%= f.search_field :last_name_cont, class: "form-control col-md-7 col-xs-12", placeholder: "Last Name"  %>
                      <!-- <input type="text" id="first-name" required="required" class="form-control col-md-7 col-xs-12"> -->
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <div >
                      <%= f.date_field :db_cont, autofocus: true, class: "form-control col-md-7 col-xs-12", placeholder: "Date of Birth"  %>
                      <!-- <input type="text" id="first-name" required="required" class="form-control col-md-7 col-xs-12"> -->
                    </div>
                  </div>
                </div>

                <div class="col-md-3">
                  <%=f.submit "Search",:class => 'btn btn-primary' %>
                </div>
              </div>
            <% end %>
           
          </div>


          <%= link_to 'Add Patient',new_patient_path, class: "btn btn-primary btn-lg"  %>
          <div class="x_content">
            <ul class="list-unstyled msg_list">
              <% @patients.each do |patient| %>
                <%= render partial: "/patients/single_patient", locals: {patient: patient} %>

              <%end%>
            </ul>
            <br>
            
          </div>
        </div>
      </div>

    <div class="clearfix"></div>
  </div>
</div>