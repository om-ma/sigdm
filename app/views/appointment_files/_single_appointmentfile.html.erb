<li>
  <span class="image">
  </span>
  <span class="message">
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  </span>
  <span class="message">
    <span class="image">
      <p>Name: <%= appointment_file.name %></p>  
      <p>Description : <%= appointment_file.desc %></p>

      <p>
        <% if appointment_file.document.present? %>
          Document: <%= link_to File.basename(appointment_file.document.path), appointment_file.document.url, target: "_blank" %>
        <% else %>
          Document: Not Provided
        <% end%>
        
      </p>
    </span>
    <span class="image">
      <%#= link_to 'Show', appointment_file, class: "btn btn-primary btn-xs" %>
      <%= link_to 'Edit', edit_appointment_file_path(appointment_file), class: "btn btn-info btn-xs" %>
      <%= link_to 'Destroy', appointment_file, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
    </span>
  </span>
</li>
